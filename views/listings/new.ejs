<!-- * here i use new format of image that is image uploading  -->
<div class="mb-3">
    <label for="title" class="form-label" >Upload-image</label>
    <input type="file"   name="listing[image]"      class="form-control"   required >
    <div class="invalid-feedback">Add valid image  </div> 

</div>


<div class="mb-3">
    <label for="title" class="form-label">Location</label>
    <input type="text" name="listing[location]" placeholder="Bihar" class="form-control"    required >
    <div class="invalid-feedback">Enter a valid location  </div> 

</div>
       
  


      
        <button class="btn btn-dark add-btn" type="submit">Add</button>
<br><br>
        </form>
</div>
    </div>

